@model IEnumerable<LanguageCourses.Domain.DataTransferObjects.EmployeeDto>
@{
    Layout = "_Layout";
}

<h2>Список сотрудников</h2>

<a asp-action="Create" class="btn btn-primary">Добавить сотрудника</a>
<table class="table">
    <thead>
        <tr>
            <th>Фамилия</th>
            <th>Имя</th>
            <th>Должность</th>
            <th>Телефон</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.Surname</td>
                <td>@employee.Name</td>
                <td>@employee.JobTitle?.Name</td>
                <td>@(employee.Phone ?? "Нет телефона")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@employee.EmployeeId">Подробнее</a> |
                    <a asp-action="Delete" asp-route-id="@employee.EmployeeId">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>