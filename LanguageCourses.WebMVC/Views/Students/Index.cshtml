@model IEnumerable<LanguageCourses.Domain.DataTransferObjects.StudentDto>
@{
    Layout = "_Layout";
}

<h2>Список слушателей</h2>

<a asp-action="Create" class="btn btn-primary">Добавить слушателя</a>
<table class="table">
    <thead>
        <tr>
            <th>Фамилия</th>
            <th>Имя</th>
            <th>Дата рождения</th>
            <th>Телефон</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.Surname</td>
                <td>@student.Name</td>
                <td>@student.BirthDate.ToString("d")</td>
                <td>@student.Phone</td>
                <td>
                    <a asp-action="Details" asp-route-id="@student.StudentId">Подробнее</a> |
                    <a asp-action="Delete" asp-route-id="@student.StudentId">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>