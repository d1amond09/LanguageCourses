@model IEnumerable<LanguageCourses.Domain.DataTransferObjects.JobTitleDto>
@{
    Layout = "_Layout";
}

<h2>Список должностей</h2>

<a asp-action="Create" class="btn btn-primary">Добавить должность</a>
<table class="table">
    <thead>
        <tr>
            <th>Название должности</th>
            <th>Зарплата</th>
            <th>Обязанности</th>
            <th>Требования</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var jobTitle in Model)
        {
            <tr>
                <td>@jobTitle.Name</td>
                <td>@jobTitle.Salary.ToString("C2")</td> 
                <td>@(jobTitle.Responsibilities ?? "Нет информации об обязанностях")</td>
                <td>@(jobTitle.Requirements ?? "Нет информации о требованиях")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@jobTitle.JobTitleId">Подробнее</a> |
                    <a asp-action="Delete" asp-route-id="@jobTitle.JobTitleId">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>