@model IEnumerable<LanguageCourses.Domain.DataTransferObjects.PaymentDto>
@{
    Layout = "_Layout";
}

<h2>Список платежей</h2>

<a asp-action="Create" class="btn btn-primary">Добавить платеж</a>
<table class="table">
    <thead>
        <tr>
            <th>Дата</th>
            <th>Цель платежа</th>
            <th>Сумма</th>
            <th>Слушатель</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var payment in Model)
        {
            <tr>
                <td>@payment.Date.ToString("d")</td>
                <td>@payment.Purpose</td>
                <td>@payment.Amount.ToString("C2")</td>
                <td>@payment.Student?.ToString()</td> 
                <td>
                    <a asp-action="Details" asp-route-id="@payment.PaymentId">Подробнее</a> |
                    <a asp-action="Delete" asp-route-id="@payment.PaymentId">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>